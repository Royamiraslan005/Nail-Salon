@model NailSalon.Core.ViewModels.MenuItemVm

@{
    ViewData["Title"] = "Yeni Menyu Məhsulu Əlavə Et";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #fff0f6;
        font-family: 'Segoe UI', sans-serif;
    }

    .form-box {
        background-color: #ffffff;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 10px 30px rgba(214, 51, 132, 0.1);
        max-width: 600px;
        margin: 50px auto;
    }

    h2.title {
        color: #d63384;
        font-family: 'Marck Script', cursive;
        text-align: center;
        margin-bottom: 30px;
        font-size: 36px;
    }

    label {
        color: #d63384;
        font-weight: 600;
    }

    .btn-sweet {
        background-color: #d63384;
        color: white;
        border-radius: 30px;
        padding: 10px 30px;
        font-weight: 500;
        transition: 0.3s ease;
    }

        .btn-sweet:hover {
            background-color: #c22576;
        }

    .btn-back {
        background-color: #f8d7da;
        color: #721c24;
        border-radius: 30px;
        padding: 10px 25px;
        margin-left: 10px;
    }
</style>

<div class="form-box">
    <h2 class="title">🧁 Yeni Mehsul Əlavə Et"</h2>

    <form asp-action="Create" enctype="multipart/form-data" method="post" >
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Məhsul Adı</label>
            <input asp-for="Name" class="form-control" placeholder=" " />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="FormFile" class="form-label">Select Image</label>
            <input asp-for="FormFile" type="file" class="form-control" />
            <span asp-validation-for="FormFile" class="text-danger"></span>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-sweet">🍬 Əlavə Et</button>
            <a asp-action="Index" class="btn btn-back">↩️ Geri Qayıt</a>
        </div>
    </form>
</div>
