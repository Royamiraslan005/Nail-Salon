@model NailSalon.Core.ViewModels.ShopProductVm

@{
    ViewData["Title"] = "Yeni Məhsul Əlavə Et 💅";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" asp-controller="Shop" method="post" enctype="multipart/form-data" class="mt-4">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Şəkil seç (formFile)</label>
        <input type="file" name="formFile" class="form-control" />
        @* Modelin içində formFile property varsa, sadəcə name="formFile" yetərlidir *@
    </div>

    <div class="form-group">
        <label asp-for="Category"></label>
        <select asp-for="Category" class="form-control">
            <option value="">-- Seçin --</option>
            <option value="Lac">Lac</option>
            <option value="Baxım">Baxım</option>
            <option value="Aksesuar">Aksesuar</option>
            <option value="Mövsümi">Mövsümi</option>
            <option value="Dırnaq formaları">Dırnaq formaları</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Add</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
</form>

