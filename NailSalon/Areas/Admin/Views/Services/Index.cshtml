@using NailSalon.Core.ViewModels
@model List<ServicesVm>

@{
    ViewData["Title"] = "Xidmətlərimiz";
}

<div class="container py-5">
    <h2 class="text-center mb-5" style="color: #d63384;">💅 Xidmətlərimiz</h2>
    <div class="row">
        @foreach (var service in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="bg-white p-3 text-center shadow rounded">
                    <div class="zoom-effect">
                        <img src="~/images/@service.ImageUrl" class="img-fluid" alt="@service.Title">
                    </div>
                    <h4 class="mt-3">@service.Title</h4>

               
                    <p class="card-text mt-2">@service.Description</p>

                    <div class="mt-3">
                        <a asp-action="Update" asp-route-id="@service.Id" class="btn btn-sm btn-warning me-2">Update</a>
                        <a asp-action="Delete" asp-route-id="@service.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('Silmək istədiyinizə əminsiniz?')">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a asp-action="Create" class="btn btn-success">+ Yeni Xidmət Əlavə Et</a>
    </div>
</div>

<style>
    body {
        background-color: #fff0f5;
        font-family: 'Arial', sans-serif;
    }

    .zoom-effect img {
        transition: transform 0.3s ease-in-out;
        border-radius: 10px;
    }

    .zoom-effect:hover img {
        transform: scale(1.05);
    }

    h4 {
        color: #d63384;
        font-weight: bold;
    }

    .card-text {
        font-size: 0.95rem;
        color: #6c757d;
    }
</style>
