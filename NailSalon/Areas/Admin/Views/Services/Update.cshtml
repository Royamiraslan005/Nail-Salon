@model NailSalon.Core.ViewModels.ServicesVm

@{
    ViewData["Title"] = "Xidməti Redaktə Et";
}

<div class="container py-5">
    <h2 class="text-center mb-4" style="color: #d63384;">Xidməti Redaktə Et</h2>

    <form asp-action="Update" enctype="multipart/form-data" method="post" class="row g-3 needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="col-md-6">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="FormFile" class="form-label">New Image</label>
            <input asp-for="FormFile" class="form-control" type="file" />
            <span asp-validation-for="FormFile" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            @* Show current image if exists *@
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mb-2">
                    <label class="form-label">Hazırki şəkil:</label><br />
                    <div class="card" style="width: 180px;">
                        <img src="/images/@Model.ImageUrl" class="card-img-top" alt="Şəkil" style="height: 180px; object-fit: cover;" />
                    </div>
                </div>
            }

        </div>

        <div class="col-12 text-center mt-3">
            <button type="submit" class="btn btn-success">Yadda Saxla</button>
        </div>
        <div asp-validation-summary="All"></div>
    </form>
</div>
