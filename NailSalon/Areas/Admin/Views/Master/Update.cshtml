@model NailSalon.Core.ViewModels.MasterVm

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FullName">FullName</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Experience">Experience</label>
        <input asp-for="Experience" class="form-control" />
        <span asp-validation-for="Experience" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Zodiac">Zodiac</label>
        <input asp-for="Zodiac" class="form-control" />
        <span asp-validation-for="Zodiac" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Specialty">Specialty</label>
        <input asp-for="Specialty" class="form-control" />
        <span asp-validation-for="Specialty" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Current Image:</label><br />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="~/uploads/masters/@Model.ImageUrl" width="150" />
        }
    </div>

    <div class="form-group">
        <label asp-for="formFile">Upload New Image</label>
        <input asp-for="formFile" type="file" class="form-control" />
        <span asp-validation-for="formFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
</form>
