@using NailSalon.Core.ViewModels
@model List<MasterVm>

@{
    ViewData["Title"] = "Ustalar";
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #fff0f7;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #444;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin-top: 50px;
            margin-bottom: 50px;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            flex-wrap: wrap;
            gap: 15px;
        }

            .top-bar h2 {
                color: #d63384;
                font-weight: 700;
                font-size: 1.9rem;
                margin: 0;
            }

        .btn-create {
            background-color: #d63384;
            border: none;
            color: white;
            font-weight: 600;
            padding: 10px 22px;
            border-radius: 12px;
            transition: background-color 0.3s ease;
        }

            .btn-create:hover {
                background-color: #b72e72;
                color: white;
            }

        .row.g-4 > .col-md-6,
        .row.g-4 > .col-lg-3 {
            display: flex;
            align-items: stretch;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(255, 105, 180, 0.15);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            width: 100%;
            display: flex;
            flex-direction: column;
        }

            .card:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 45px rgba(255, 105, 180, 0.3);
            }

        .card-img-top {
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            height: 220px;
            object-fit: cover;
            width: 100%;
        }

        .card-body {
            flex-grow: 1;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            text-align: center;
        }

        .card-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: #d63384;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 0.95rem;
            color: #555555;
            line-height: 1.4;
            margin-bottom: 20px;
            white-space: pre-line;
        }

        .btn-reserve {
            background-color: #ff69b4;
            border: none;
            color: white;
            font-weight: 600;
            padding: 10px 18px;
            border-radius: 12px;
            transition: background-color 0.3s ease;
            text-decoration: none;
            display: inline-block;
            width: 100%;
        }

            .btn-reserve:hover {
                background-color: #e0559c;
                color: white;
                text-decoration: none;
            }

        .card-footer {
            padding: 15px 20px;
            display: flex;
            justify-content: center;
            gap: 12px;
            flex-wrap: wrap;
        }

        .btn-update,
        .btn-delete {
            flex: 1 1 45%;
            padding: 8px 0;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            border: none;
            transition: background-color 0.3s ease;
            color: white;
        }

        .btn-update {
            background-color: #ffc107;
        }

            .btn-update:hover {
                background-color: #e0a800;
            }

        .btn-delete {
            background-color: #dc3545;
        }

            .btn-delete:hover {
                background-color: #bb2d3b;
            }

        @@media (max-width: 768px) {
            .top-bar

        {
            flex-direction: column;
            align-items: flex-start;
        }

        .btn-create {
            width: 100%;
            text-align: center;
        }

        .card-footer {
            flex-direction: column;
            gap: 10px;
        }

        .btn-update,
        .btn-delete {
            flex: 1 1 100%;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="top-bar">
            <h2>👩‍🎨 Peşəkar Ustalarımız</h2>
            <a asp-action="Create" class="btn-create">+ Yeni Usta</a>
        </div>

        <div class="row g-4">
            @foreach (var master in Model)
            {
                <div class="col-12 col-sm-6 col-lg-3 d-flex">
                    <div class="card">
                        <img src="~/IMAGE/@master.ImageUrl" class="card-img-top" alt="@master.FullName" />
                        <div class="card-body">
                            <h5 class="card-title">@master.FullName</h5>
                            <p class="card-text">
                                💎 @master.Experience təcrübə <br />
                                ✨ Bürc: @master.Zodiac <br />
                                🔸 @master.Specialty
                            </p>
                            <a href="/Reservation/Create" class="btn-reserve">Rezervasiya et</a>
                        </div>
                        <div class="card-footer">
                            <a asp-action="Update" asp-route-id="@master.Id" class="btn-update">Update</a>
                            <a asp-action="Delete" asp-route-id="@master.Id" class="btn-delete" onclick="return confirm('Silmək istədiyinizə əminsiniz?')">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
