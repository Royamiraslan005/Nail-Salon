@using NailSalon.Core.ViewModels
@model List<MasterVm>


@{
    ViewData["Title"] = "Ustalar";
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <title>Ustalarımız</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #fff8fc;
            font-family: 'Arial', sans-serif;
        }

        .card img {
            height: 220px;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card {
            border: none;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            }

            .card h5 {
                color: #d63384;
                font-weight: bold;
            }

        .card-text {
            font-size: 0.95rem;
            color: #6c757d;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="top-bar">
            <h2 style="color: #d63384;">👩‍🎨 Peşəkar Ustalarımız</h2>
            <a asp-action="Create" class="btn btn-success">+ Yeni Usta</a>
        </div>

        <div class="row g-4">
            @foreach (var master in Model)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 shadow-sm text-center">
                        <img src="~/IMAGE/@master.ImageUrl" class="card-img-top" alt="@master.FullName">
                        <div class="card-body">
                            <h5 class="card-title">@master.FullName</h5>
                            <p class="card-text">💎 @master.Experience təcrübə <br> ✨ Bürc: @master.Zodiac <br> 🔸 @master.Specialty</p>
                            <a href="/Reservation/Create" class="btn btn-sm btn-outline-primary">Rezervasiya et</a>
                        </div>
                        <a asp-controller="Master" asp-action="Update" asp-route-id="@master.Id"
                           class="btn btn-sm btn-dark ms-1">Update</a>

                        <a asp-controller="Master" asp-action="Delete" asp-route-id="@master.Id"
                           class="btn btn-sm btn-danger ms-1">Delete</a>

                        </div>
                    </div>
               
            }
        </div>
    </div>
</body>
</html>

