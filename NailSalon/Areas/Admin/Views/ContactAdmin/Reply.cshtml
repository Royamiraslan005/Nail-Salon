@model NailSalon.Core.Models.ContactMessage

@{
    ViewData["Title"] = "Mesaja Cavab Ver";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Mesaja Cavab Ver 💬</h2>

    <div class="card p-4">
        <p><strong>Ad:</strong> @Model.FullName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Mesaj:</strong> @Model.Message</p>

        <form method="post">
            <div class="form-group">
                <label for="reply">Cavabınız</label>
                <textarea name="reply" id="reply" class="form-control" rows="5" required>@Model.Reply</textarea>
            </div>
            <button type="submit" class="btn btn-success mt-3">Cavabı Göndər</button>
        </form>
    </div>
</div>
