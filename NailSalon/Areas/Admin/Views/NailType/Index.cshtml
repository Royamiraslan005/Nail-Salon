@using NailSalon.Core.ViewModels
@model List<NailTypeVm>

<div class="container py-5">
    <h2 class="text-center mb-5" style="color: #d63384;">💅 Dırnaq Növləri</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="bg-white p-3 text-center shadow rounded">
                    <div class="zoom-effect">
                        <img width="200px" height="200px" src="~/images/@item.ImageUrl" alt="@item.Title" class="img-fluid nail-image" />
                    </div>
                    <h4 class="mt-3">@item.Title</h4>
                    <p class="card-text">💰 Qiymət: @item.Price AZN</p>
                    <div class="mt-3">
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2">Update</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('Silmək istədiyinizə əminsiniz?')">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center mt-4">
        <a asp-action="Create" class="btn btn-success">+ Yeni Dirnaq Növü Əlavə Et</a>
    </div>
</div>

<style>
    .nail-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 10px;
    }
</style>
