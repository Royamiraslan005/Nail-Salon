@model NailSalon.Core.ViewModels.ShopProductVm

@{
    ViewData["Title"] = "Məhsul Detalları";
}

<div class="container py-5">
    <div class="row">
        <!-- Şəkil -->
        <div class="col-md-6">
            <img src="~/images/@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name" />
        </div>

        <!-- Məlumatlar -->
        <div class="col-md-6">
            <h2 class="text-pink">@Model.Name</h2>
            <p class="mt-3">@Model.Description</p>

            <p class="fw-bold fs-5 text-dark">Qiymət: @($"{Model.Price:F2} azn")</p>
            <span class="badge bg-light border border-secondary text-dark">@Model.Category</span>

            <div class="mt-4 d-flex gap-2 flex-wrap">
                <form asp-controller="Basket" asp-action="AddToBasket" method="post">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <button type="submit" class="btn btn-outline-success">
                        🛒 Səbətə əlavə et
                    </button>
                </form>

                <form asp-controller="Sale" asp-action="Create" method="post">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <input type="number" name="quantity" value="1" min="1" class="form-control d-inline-block" style="width: 70px;" />
                    <button type="submit" class="btn btn-outline-primary">💳 Al</button>
                </form>
            </div>
        </div>
    </div>
</div>
