@using NailSalon.Core.Models
@using NailSalon.Core.ViewModels
@* @model NailSalon.Core.ViewModels.ReservationVm *@
@model ReservationVm


@* @{
    ViewData["Title"] = "Rezervasiya – Zodiac Nails";
}
 *@
<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            background: #fff0f5;
            font-family: 'Segoe UI', sans-serif;
            padding: 40px;
        }

        .reservation-box {
            max-width: 600px;
            margin: auto;
            background: #ffffff;
            border-radius: 16px;
            padding: 35px;
            box-shadow: 0 0 25px rgba(255, 105, 180, 0.2);
        }

        h2 {
            text-align: center;
            color: #d63384;
            margin-bottom: 25px;
        }

        label {
            display: block;
            margin-top: 18px;
            font-weight: 600;
            color: #d63384;
        }

        select, input[type="date"], input[type="time"] {
            width: 100%;
            padding: 12px;
            border: 1px solid #ffc1d9;
            border-radius: 10px;
            margin-top: 5px;
            background-color: #fff8fb;
            font-size: 14px;
        }

        .radio-group {
            margin-top: 10px;
        }

            .radio-group input {
                margin-right: 8px;
            }

        button {
            margin-top: 25px;
            width: 100%;
            padding: 14px;
            border: none;
            background: #ff69b4;
            color: white;
            font-size: 16px;
            border-radius: 10px;
            cursor: pointer;
        }

            button:hover {
                background: #e754a3;
            }
    </style>
</head>
<body>

    @{
        ViewData["Title"] = "Rezervasiya et";
    }

    <h2 class="text-danger">Rezarvasiya et</h2>

    <form asp-action="SendReservation" method="post" class="p-4 bg-light rounded">

        <!-- Usta seçimi -->
        <label for="master">Usta seçin:</label>
        <select asp-for="MasterId" class="form-control" required>
            <option disabled selected>Seçin...</option>
            @foreach (var item in ViewBag.MasterVMs as List<MasterVm>)
            {
                <option value="@item.Id">@item.FullName</option>
            }
        </select>

        <br />
        <br />

        <!-- Dizayn seçimi -->
        <label for="design">Dizayn seçin:</label>
        <select id="design" name="DesignName" required>
            <option disabled selected>Seçin...</option>
            @{
                foreach (var item in ViewBag.Types as List<NailType>)
                {
                    <option value=@item.Id>@item.Title</option>
                }
            }


        </select>

        <!-- Tarix -->
        <div class="mb-3">
            <label asp-for="Date" class="form-label">Tarix:</label>
            <input asp-for="Date" type="date" class="form-control" required />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <!-- Saat -->
        <div class="mb-3">
            <label asp-for="Time" class="form-label">Saat:</label>
            <input asp-for="Time" type="time" class="form-control" required />
            <span asp-validation-for="Time" class="text-danger"></span>
        </div>

        <!-- Qiymət (əgər istifadəçi daxil edirsə) -->
        <div class="mb-3">
            <label asp-for="Price" class="form-label">Qiymət (₼):</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Yemək və içki seçimi -->
        <div class="mb-3">
            <label class="form-label">Yemək və içki istəyirsiniz?</label><br />
            <div class="form-check form-check-inline">
                <input class="form-check-input" asp-for="WantsMenu" type="radio" value="true" />
                <label class="form-check-label">Bəli</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" asp-for="WantsMenu" type="radio" value="false" />
                <label class="form-check-label">Xeyr</label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Rezervasiya et</button>
    </form>


</body>
</html>

