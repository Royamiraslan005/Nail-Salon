@using NailSalon.Core.Models
@using NailSalon.Core.ViewModels
@model NailSalon.Core.ViewModels.ReservationVm

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            background: #fff0f5;
            font-family: 'Segoe UI', sans-serif;
            padding: 40px;
        }

        .reservation-box {
            max-width: 600px;
            margin: auto;
            background: #ffffff;
            border-radius: 16px;
            padding: 35px;
            box-shadow: 0 0 25px rgba(255, 105, 180, 0.2);
        }

        h2 {
            text-align: center;
            color: #d63384;
            margin-bottom: 25px;
        }

        label {
            display: block;
            margin-top: 18px;
            font-weight: 600;
            color: #d63384;
        }

        select, input[type="datetime-local"] {
            width: 100%;
            padding: 12px;
            border: 1px solid #ffc1d9;
            border-radius: 10px;
            margin-top: 5px;
            background-color: #fff8fb;
            font-size: 14px;
        }

        .radio-group {
            margin-top: 10px;
        }

            .radio-group input {
                margin-right: 8px;
            }

        button {
            margin-top: 25px;
            width: 100%;
            padding: 14px;
            border: none;
            background: #ff69b4;
            color: white;
            font-size: 16px;
            border-radius: 10px;
            cursor: pointer;
        }

            button:hover {
                background: #e754a3;
            }
    </style>
</head>
<body>

    <div class="reservation-box">
        <h2 class="text-danger">Rezarvasiya et</h2>
        <form method="post" asp-action="Create" asp-controller="Reservation">
            <!-- Usta seçimi -->
            <label asp-for="MasterId">Usta seçin:</label>
            <select asp-for="MasterId" required>
                <option disabled selected>Seçin...</option>
                @foreach (var item in ViewBag.Masters as List<MasterVm>)
                {
                    <option value="@item.Id">@item.FullName</option>
                }
            </select>

            <!-- Dizayn seçimi -->
            <label asp-for="DesignId">Dizayn seçin:</label>
            <select asp-for="DesignId" required>
                <option disabled selected>Seçin...</option>
                @foreach (var item in ViewBag.Designs as List<NailType>)
                {
                    <option value="@item.Id">@item.Title</option>
                }
            </select>

            <!-- Tarix və Saat -->
            <label asp-for="Date">Tarix və saat seçin:</label>
            <input asp-for="Date" type="datetime-local" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
            <span asp-validation-for="Date" class="text-danger"></span>

            <!-- Gizli istifadəçi məlumatı -->
            <input type="hidden" name="username" value="@User.Identity.Name" />

            <!-- Yemək/İçki -->
            <label asp-for="WantsFoodDrink">Yemək/İçki istəyirsiniz?</label>
            <div class="radio-group">
                <input type="radio" asp-for="WantsFoodDrink" value="true" /> Bəli
                <input type="radio" asp-for="WantsFoodDrink" value="false" /> Xeyr
            </div>
            <span asp-validation-for="WantsFoodDrink" class="text-danger"></span>

            <button type="submit">Rezervasiya et</button>
        </form>
    </div>
</body>
</html>
