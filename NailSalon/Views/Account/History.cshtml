@model List<NailSalon.Core.ViewModels.ReservationInfoVm>

@{
    ViewData["Title"] = "Keçmiş Rezervasiyalar";

    string zodiac = (ViewBag.Zodiac as string)?.ToLower() ?? "";

    string zodiacClass = zodiac switch
    {
        "qoç" => "zodiac-qoc",
        "buğa" => "zodiac-buga",
        "əkizlər" => "zodiac-ekizler",
        "xərçəng" => "zodiac-xerceng",
        "şir" => "zodiac-sir",
        "qız" => "zodiac-qiz",
        "tərəzi" => "zodiac-terezi",
        "əqrəb" => "zodiac-eqreb",
        "oxatan" => "zodiac-oxatan",
        "oğlaq" => "zodiac-oglaq",
        "dolça" => "zodiac-dolca",
        "balıq" => "zodiac-baliq",
        _ => ""
    };
}
<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
            background: #fff0f7; /* Açıq çəhrayı arxa fon */
        }

        .container {
            max-width: 900px;
            margin: 50px auto;
            background: #fff0f7;
            padding: 30px;
            border-radius: 16px;
            box-shadow: 0 0 15px rgba(255, 105, 180, 0.2);
        }

        h2 {
            text-align: center;
            color: #d63384;
            margin-bottom: 25px;
        }

        .reservation-table {
            width: 100%;
            border-collapse: collapse;
            overflow-x: auto;
            border-radius: 10px;
        }

            .reservation-table th,
            .reservation-table td {
                padding: 12px;
                text-align: center;
                border: 1px solid #ffd1e6;
            }

            .reservation-table th {
                background-color: #ffe4ec;
                color: #d63384;
            }

        /* Zodiac rənglərinə uyğun cədvəl sətiri arxa fonları */
        .zodiac-qoc .reservation-table td {
            background-color: #ffe6e6;
        }

        .zodiac-buga .reservation-table td {
            background-color: #e6ffe6;
        }

        .zodiac-ekizler .reservation-table td {
            background-color: #e6f7ff;
        }

        .zodiac-xerceng .reservation-table td {
            background-color: #fff0f5;
        }

        .zodiac-sir .reservation-table td {
            background-color: #fff9e6;
        }

        .zodiac-qiz .reservation-table td {
            background-color: #e6fff9;
        }

        .zodiac-terezi .reservation-table td {
            background-color: #fcefff;
        }

        .zodiac-eqreb .reservation-table td {
            background-color: #ffe6f2;
        }

        .zodiac-oxatan .reservation-table td {
            background-color: #fffde6;
        }

        .zodiac-oglaq .reservation-table td {
            background-color: #f2f2f2;
        }

        .zodiac-dolca .reservation-table td {
            background-color: #e6f7ff;
        }

        .zodiac-baliq .reservation-table td {
            background-color: #e6ecff;
        }

        .menu-list {
            padding-left: 16px;
            margin: 0;
            list-style-type: disc;
            text-align: left;
        }

        .text-muted {
            color: #999;
            font-style: italic;
        }

        .back-btn {
            display: inline-block;
            margin-top: 30px;
            padding: 10px 20px;
            background-color: #d63384;
            color: white;
            text-decoration: none;
            border-radius: 10px;
            font-weight: bold;
            box-shadow: 0 6px 12px rgba(255, 105, 180, 0.3);
            transition: background 0.3s ease;
        }

            .back-btn:hover {
                background-color: #b02c6f;
            }

        @@media (max-width: 768px) {
            .container

        {
            padding: 20px;
            margin: 30px 10px;
        }

        .reservation-table th,
        .reservation-table td {
            padding: 10px 6px;
            font-size: 14px;
        }

        .menu-list {
            padding-left: 12px;
        }

        }
    </style>
</head>
<body class="@zodiacClass">
    <div class="container">
        <h2>📜 Keçmiş Rezervasiyalar</h2>

        @if (Model != null && Model.Any())
        {
            <table class="reservation-table">
                <thead>
                    <tr>
                        <th>Usta</th>
                        <th>Dizayn</th>
                        <th>Tarix</th>
                        <th>Menyu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MasterName</td>
                            <td>@item.DesignName</td>
                            <td>@item.Date.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                @if (item.MenuItems != null && item.MenuItems.Any())
                                {
                                    <ul class="menu-list">
                                        @foreach (var menu in item.MenuItems)
                                        {
                                            <li>@menu.Name</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">Seçilməyib</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Keçmiş rezervasiya yoxdur.</p>
        }

        <a href="/Account/Profile" class="back-btn">← Geri Profilə</a>
    </div>
</body>
</html>
