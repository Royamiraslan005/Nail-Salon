@{
    Layout = null;
    ViewData["Title"] = "İcazə Rədd Edildi";
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Zodiac Nails</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #fef6ff, #e5d1f2);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .access-card {
            animation: fadeIn 1s ease;
            max-width: 460px;
            padding: 35px;
            border-radius: 1.5rem;
            box-shadow: 0 0 30px rgba(0,0,0,0.1);
            background-color: #fff;
        }

        .emoji {
            font-size: 48px;
        }

        a.btn-home {
            border-radius: 2rem;
            padding: 10px 25px;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <div class="access-card text-center">
        <div class="emoji mb-3">🙅‍♀️</div>
        <h2 class="text-danger mb-2">İcazə yoxdur</h2>
        <p class="mb-3">Bağışlayın, bu səhifəyə baxmaq üçün səlahiyyətiniz yoxdur.</p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-home">🏠 Ana səhifəyə qayıt</a>
    </div>
</body>
</html>
