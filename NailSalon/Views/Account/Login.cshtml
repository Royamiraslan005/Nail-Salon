@model NailSalon.Core.ViewModels.LoginVm

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <title>Giriş – Zodiac Nails</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #fff0f5;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            padding-top: 30px;
        }

        .login-box {
            background: #ffffff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(255, 105, 180, 0.3);
            width: 360px;
            text-align: center;
        }

            .login-box h2 {
                color: #d63384;
                margin-bottom: 20px;
            }

            .login-box input {
                width: 100%;
                padding: 12px;
                margin: 10px 0;
                border: 1px solid #ffb6c1;
                border-radius: 8px;
                font-size: 15px;
            }

            .login-box button {
                width: 100%;
                padding: 12px;
                background-color: #ff69b4;
                border: none;
                color: white;
                border-radius: 8px;
                font-size: 16px;
                cursor: pointer;
                transition: 0.3s;
            }

                .login-box button:hover {
                    background-color: #e754a3;
                }

        .form-check-input {
            width: 16px;
            height: 16px;
            margin-top: 0.15rem;
            cursor: pointer;
            accent-color: #ff69b4; /* pastel çəhrayı tonu */
        }


        .footer-text {
            margin-top: 15px;
            font-size: 14px;
            color: #888;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <h2>Giriş</h2>
        <form asp-action="Login" method="post">
            <div class="mb-3 text-start">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3 text-start">
                <label asp-for="Password" class="form-label">Şifrə</label>
                <input asp-for="Password" class="form-control" placeholder="Şifrə" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check text-start mb-2" style="font-size: 14px;">
                <input asp-for="RememberMe" class="form-check-input" style="width: 16px; height: 16px;" />
                <label asp-for="RememberMe" class="form-check-label" style="margin-left: 5px;">Remember</label>
            </div>

            <div asp-validation-summary="All" class="text-danger small mb-2"></div>

            <button type="submit" class="btn btn-primary">Giriş et</button>
        </form>

        <div class="footer-text">
            Hesabınız yoxdur? <a href="/Account/Register">Qeydiyyat</a>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
