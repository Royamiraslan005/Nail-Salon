@using NailSalon.Core.ViewModels
@model NailSalon.Core.ViewModels.ProfileVm

@{
    string zodiacClass = Model.Zodiac.ToLower() switch
    {
        "qoç" => "zodiac-qoc",
        "buğa" => "zodiac-buga",
        "əkizlər" => "zodiac-ekizler",
        "xərçəng" => "zodiac-xerceng",
        "şir" => "zodiac-sir",
        "qız" => "zodiac-qiz",
        "tərəzi" => "zodiac-terezi",
        "əqrəb" => "zodiac-eqreb",
        "oxatan" => "zodiac-oxatan",
        "oğlaq" => "zodiac-oglaq",
        "dolça" => "zodiac-dolca",
        "balıq" => "zodiac-baliq",
        _ => ""
    };
    var reservations = ViewBag.Reservations as List<ReservationInfoVm> ?? new();
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8" />
    <title>Tarixçə – Zodiac Nails</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        body {
            background: #fdf1f6;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 900px;
            margin: 50px auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(255, 105, 180, 0.2);
            padding: 30px;
        }

        h1 {
            text-align: center;
            color: #d63384;
            margin-bottom: 30px;
        }

        .orders-table {
            width: 100%;
            border-collapse: collapse;
        }

            .orders-table th,
            .orders-table td {
                border: 1px solid #ffb6c1;
                padding: 10px;
                text-align: left;
                vertical-align: top;
            }

            .orders-table th {
                background-color: #ffe4ec;
            }

        .menu-list {
            padding-left: 20px;
            list-style: disc;
            color: #555;
            margin: 0;
        }

        .text-muted {
            color: #999;
            font-style: italic;
        }

        .no-data {
            margin-top: 15px;
            color: #999;
            text-align: center;
        }

        /* Bürclərə görə cədvəl arxa fonu */
        .orders-table.zodiac-qoc {
            background-color: #fff3f3;
        }

        .orders-table.zodiac-buga {
            background-color: #f4fff4;
        }

        .orders-table.zodiac-ekizler {
            background-color: #f0f9ff;
        }

        .orders-table.zodiac-xerceng {
            background-color: #fff5f9;
        }

        .orders-table.zodiac-sir {
            background-color: #fff7e6;
        }

        .orders-table.zodiac-qiz {
            background-color: #f4fff9;
        }

        .orders-table.zodiac-terezi {
            background-color: #fdf6ff;
        }

        .orders-table.zodiac-eqreb {
            background-color: #fceef5;
        }

        .orders-table.zodiac-oxatan {
            background-color: #fefde5;
        }

        .orders-table.zodiac-oglaq {
            background-color: #f0f0f0;
        }

        .orders-table.zodiac-dolca {
            background-color: #e8f7ff;
        }

        .orders-table.zodiac-baliq {
            background-color: #edf4ff;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Sizin Rezarvasiya Tarixçəniz</h1>

        @if (reservations.Any())
        {
            <table class="orders-table @zodiacClass">
                <thead>
                    <tr>
                        <th>Usta</th>
                        <th>Dizayn</th>
                        <th>Tarix</th>
                        <th>Seçilmiş Menyular</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in reservations)
                    {
                        <tr>
                            <td>@item?.MasterName</td>
                            <td>@item?.DesignName</td>
                            <td>@item?.Date.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                @if (item?.MenuItems != null && item.MenuItems.Any())
                                {
                                    <ul class="menu-list">
                                        @foreach (var menu in item.MenuItems)
                                        {
                                            <li>@menu?.Name</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">Seçilməyib</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="no-data">Heç bir rezarvasiya tapılmadı.</p>
        }
    </div>
</body>
</html>
