@using NailSalon.Core.ViewModels
@model ReviewVm

<section id="slider">
    <div class="swiper slider">
        <div class="swiper-wrapper">
            <style>
                   @@media (max-width: 900px) {
                       .slider-title {
                           font-size:35px !important;
                           margin-top: 30px !important;
                       }
                       .slider-desc {
                           font-size: 20px !important;
                           margin-top: 30px !important;
                       }
                   }

                   @@media (max-width: 720px) {
                       .slider-title {
                           font-size:25px !important;
                           margin-top: 10px !important;
                       }
                       .slider-desc {
                           font-size: 16px !important;
                           margin-top: 20px !important;
                       }
                       .absolute-div {
                           top: 4% !important;
                       }
                   }
            </style>
            <!-- Slide 1 (img ilə) -->
            <div class="swiper-slide d-flex position-relative">
                <img src="Assets/images/Group 2.png" alt="Banner Image" class=" w-100" style="object-fit: cover; top: 0; left: 0; z-index: 0; ">

                <div class="absolute-div" style="
                       position: absolute;
                       top: 8%;
                       left: 6%;
                       color: #4A0020;
        z-index: 1;
        text-align: left;
                ">
                    <h2 style="font-size: 56px; font-weight: 700; margin-top: 40px;" class='slider-title'>
                        Stilini bürcünlə tamamla!
                    </h2>
                    <h3 class='slider-desc' style="font-size: 28px; font-style: italic; font-weight: 400; line-height: 1.5; margin-top:40px">
                        Bürcünün ilhamı ilə öz stilini yaşayan, güclü və zövqlü <br>
                        qadınların dırnaq cənnəti.
                    </h3>
                </div>
            </div>

        </div>
    </div>
    </div>
    <div class="position-absolute top-0 bottom-0 end-0 m-auto me-0 me-md-5 main-slider-button-next">
        <svg class="arrow-right light-color" width="60" height="60">
            <use xlink:href="#arrow-right"></use>
        </svg>
    </div>
    <div class="position-absolute top-0 bottom-0 start-0 m-auto ms-0 ms-md-5 main-slider-button-prev">
        <svg class="arrow-left light-color" width="60" height="60">
            <use xlink:href="#arrow-left"></use>
        </svg>
    </div>
    </div>
</section>
<section id="about" class="py-5" style="background-color: #fff6fb;">
    <div class="container-lg padding-medium">
        <div class="text-center mb-5">
            <h2 class="display-5" style="color:#d06db9; font-family: 'Marck Script', cursive;"> About</h2>
            <p class="lead text-muted mx-auto" style="max-width: 700px;">
                Zodiac — bürclərə və estetikaya uyğun dırnaq sənətinin ünvanıdır. Həm gözəllik, həm də fərdilik burada birləşir.
            </p>
        </div>

        <style>
            .custom-cards-row {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            }

            .custom-cards-row .col-md-3 {
            flex: 1 1 calc(25% - 1rem);
            max-width: calc(25% - 1rem);
            box-sizing: border-box;
            }

            @@media (min-width: 768px) and (max-width: 1024px) {
            .custom-cards-row .col-md-3

            {
            flex: 1 1 calc(50% - 1rem);
            max-width: calc(50% - 1rem);
            }

            }

            @@media (max-width: 767px) {
            .custom-cards-row .col-md-3

            {
            flex: 1 1 100%;
            max-width: 100%;
            }

            }
        </style>

        <div class="row g-md-4 text-center custom-cards-row">
            <!-- Bürc Dizaynı -->
            <div class="col-md-3 mb-4">
                <div class="bg-white shadow rounded-4 text-center" style="padding: 0px 8px; height: 320px; display: flex; align-items: center; justify-content: center; flex-direction: column">


                    <!-- Üst şəkil (ikon) -->
                    <img src="Assets/images/burc.jpg" alt="Burc"
                    style="width: 150px; height: 135px; ">
                    <h5 class="fw-semibold my-2" style="color: black">12 Bürc Dizaynı</h5>
                    <p class="text-muted mb-0" style="color: black">Hər bürcə uyğun xüsusi dırnaq dizaynları.</p>
                </div>
            </div>


            <!-- Unikal Stil -->
            <div class="col-md-3 mb-4">
                <div class="bg-white shadow rounded-4 text-center" style="padding: 0px 8px; height: 320px; display: flex; align-items: center; justify-content: center; flex-direction: column">
                    <img src="Assets/images/unikal.jpg" alt="Unikal"
                    style="width: 150px; height: 135px; ">
                    <h5 class="fw-semibold my-2" style="color: black">Unikal Stil</h5>
                    <p class="text-muted mb-0" style="color: black">Minimalistdən ekstravaqant dizaynlara qədər seçimlər.</p>
                </div>
            </div>

            <!-- Ad günü Endirimi -->
            <div class="col-md-3 mb-4">
                <div class="bg-white shadow rounded-4 text-center" style="padding: 0px 8px; height: 320px; display: flex; align-items: center; justify-content: center; flex-direction: column">
                    <img src="Assets/images/adgunu.jpg" alt="Ad gunu"style="width: 100px; height: 135px; ">
                    <h5 class="fw-semibold my-2" style="color: black">Ad günü Endirimi</h5>
                    <p class="text-muted mb-0" style="color: black">Ad gününüzə özəl 30% endirim sizi gözləyir!</p>
                </div>
            </div>

            <!-- Qonaqpərvərlik -->
            <div class="col-md-3 mb-4">
                <div class="bg-white shadow rounded-4 text-center" style="padding: 0px 8px; height: 320px; display: flex; align-items: center; justify-content: center; flex-direction: column">
                    <img src="Assets/images/qonaq.png" alt="İçki İkonsu"
                    style="width: 218px; height: 149.11px; ">

                    <!-- Yazılar -->
                    <h5 class="fw-semibold my-2" style="color: black">Qonaqpərvərlik</h5>
                    <p class="mb-0" style="color: black">Seçiminizə uyğun içkilər və şirniyyatlar təqdim olunur.</p>
                </div>
            </div>

        </div>
    </div>
</section>


<section id="services" class="jarallax"
style="background-image: url(images/background-1.jpg); background-size: cover; background-repeat: no-repeat; background-position: center;">
    <div class="container-lg padding-medium">
        <div class="section-title text-center mb-5">
            <h2 class="display-4 fw-normal" style="color: #d63384;" >Services we Offer</h2>
        </div>

        <div class="container">
            <div class="row">

                @foreach (var item in ViewBag.Services as List<ServicesVm>)
                {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm border-0">
                                    <a href="@Url.Action("Detail", "Services", new { id = item.Id })" style="text-decoration:none; color:black">
                                        <img src="~/images/@item.ImageUrl" class="card-img-top" alt="@item.Title">
                                    </a>
                                    <div class="card-body text-center">
                                        <a href="@Url.Action("Detail", "Services", new { id = item.Id })" class="text-decoration-none text-dark">
                                            <h5 class="card-title">@item.Title</h5>
                                        </a>
                                    </div>
                                </div>
                            </div>
                }
                }



            </div>
        </div>

    </div>
    </div>
</section>

<div class="container py-5">
    <h2 class="text-center mb-5" style="color: #d63384;">

        Our Professional Masters
    </h2>
    <div class="row g-4">

        @foreach (var item in ViewBag.MasterVms as List<MasterVm>)
        {
                    <div class="col-md-6 col-lg-3">
                        <div class="card h-100 shadow-sm text-center">
                            <a asp-action="Detail" asp-controller="Master" asp-route-id="@item.Id">
                                <img width="330" height="330" src="~/IMAGE/@item.ImageUrl" class="card-img-top" alt="@item.FullName" />
                            </a>


                            <div class="card-body">
                                <h5 class="card-title">@item.FullName</h5>
                                <p class="card-text">
                            @item.Experience <br />
                            @item.Zodiac <br />
                            @item.Specialty
                                </p>

                                <!-- Ustanın Id-sini göndəririk -->
                                <a asp-action="Create" asp-controller="Reservation" asp-route-masterId="@item.Id" class="btn btn-sm btn-outline-primary">
                                    Rezervasiya et
                                </a>
                            </div>
                        </div>
                    </div>
        }


        <section class="py-5 bg-light">
            <div class="container">
                <h2 class="text-center mb-5" style="color: #d63384;"> Nail Types</h2>
                <div class="row g-4">
                    @foreach (var item in ViewBag.NailTypesVms as List<NailTypeVm>)
                    {
                                <div class="col-md-6 col-lg-3">
                                    <div class="card h-100 shadow-sm">
                                            <a asp-action="Detail" asp-controller="NailType" asp-route-id="@item.Id">
                <img height="300" src="~/images/@item.ImageUrl" class="card-img-top" alt="@item.Title">
                                                </a>  

                                        <div class="card-body text-center">
                                            <h5 class="card-title">@item.Title</h5>
                                            <p class="card-text text-muted"> Price @item.Price</p>
                                        </div>
                                    </div>
                                </div>

                    }


        </div>
    </div>
</section>

<section id="rey">


            @{
                ViewData["Title"] = "Rəy Yaz";
            }

<div class="container py-5">
    <h2 class="text-center mb-4 text-pink"> Bizimlə təəssüratını paylaş!</h2>
        <section id="#rey">

    <div class="card shadow-sm p-4 rounded-4 bg-white-pink mx-auto" style="max-width: 600px;">
        <form  asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="FullName" class="form-label text-muted">Adınız</label>
                <input asp-for="FullName" class="form-control rounded-3" placeholder="Adınızı daxil edin" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Comment" class="form-label text-muted">Rəyiniz</label>
                <textarea asp-for="Comment" class="form-control rounded-3" rows="4" placeholder="Təcrübənizi bizimlə bölüşün 💕"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button asp-action="CreateReview" type="submit" class="btn btn-pink px-4 py-2 rounded-pill">Göndər 💖</button>
            </div>
        </form>
    </div>

        </section>
</div>

<style>
    body {
        background-color: #fff0f6;
        font-family: 'Segoe UI', sans-serif;
    }

    .text-pink {
        color: #d63384;
        font-family: 'Marck Script', cursive;
    }

    .bg-white-pink {
        background-color: #fff8fc;
    }

    .btn-pink {
        background-color: #d63384;
        color: white;
        border: none;
    }

        .btn-pink:hover {
            background-color: #b03060;
        }
</style>

</section>


