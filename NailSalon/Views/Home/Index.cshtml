                }

                .bg-white-pink {
                    background-color: #fff8fc;
                }

                .btn-pink {
                    background-color: #d63384;
                    color: white;
                    border: none;
                }

                    .btn-pink:hover {
                        background-color: #b03060;
                    }

                @@media (max-width: 768px) {
                    .text-pink

                {
                    font-size: 1.4rem;
                }

                .row.align-items-center > div {
                    text-align: center;
                }

                img {
                    max-width: 80%;
                    margin: 0 auto;
                }

                }
            </style>
        </section>


