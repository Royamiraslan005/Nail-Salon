@model NailSalon.Core.ViewModels.AboutVm

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <title>@Model.Title - ZodiNails</title>
    <link href="https://fonts.googleapis.com/css2?family=Marck+Script&family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        .feature-box {
            background-color: #fff;
            border: 1px solid #f1cfe9;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 20px;
            transition: transform 0.3s ease;
            box-shadow: 0 0 15px rgba(208, 109, 185, 0.1);
        }

            .feature-box:hover {
                transform: translateY(-5px);
            }

            .feature-box img {
                width: 100px;
                height: 100px;
                object-fit: contain;
                margin-bottom: 15px;
            }

        .feature-title {
            font-weight: 600;
            color: #d06db9;
            margin-bottom: 10px;
            font-size: 18px;
        }

        .feature-desc {
            color: #6c757d;
            font-size: 14px;
        }

        .about-section {
            background-color: #fff6fb;
            padding: 60px 0;
        }

        .about-header h2 {
            font-family: 'Marck Script', cursive;
            color: #d06db9;
            font-size: 36px;
        }

        .about-header p {
            max-width: 700px;
            margin: 0 auto;
            color: #6c757d;
        }
    </style>
</head>
<body>

    <section class="about-section text-center">
        <div class="container">
            <div class="about-header mb-5">
                <h2> About</h2>
                <p>
                    Zodiac — bürclərə və estetikaya uyğun dırnaq sənətinin ünvanıdır. Həm gözəllik, həm də fərdilik burada birləşir.
                </p>
            </div>

            <div class="row">
                @foreach (var item in Model.Features)
                {
                    <div class="col-lg-3 col-md-6 col-sm-12 d-flex">
                        <div class="feature-box w-100 text-center">
                            <img src="~/Assets/images/@item.ImageUrl" alt="@item.Title" />
                            <div class="feature-title">@item.Title</div>
                            <div class="feature-desc">@item.Description</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

</body>
</html>
