@using NailSalon.Core.ViewModels
@model List<MasterVm>

<div class="container py-5">
    <h2 class="text-center mb-5" style="color: #680427;">Peşəkar Ustalarımız</h2>
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card master-card h-100 shadow-sm text-center border-0">
                    <a asp-action="Detail" asp-controller="Master" asp-route-id="@item.Id">
                        <img src="~/IMAGE/@item.ImageUrl" class="card-img-top" alt="@item.FullName" />
                    </a>
                    <div class="card-body text-start">
                        <h5 class="card-title">@item.FullName</h5>
                        <p class="card-text">
                            @item.Experience <br />
                            @item.Zodiac <br />
                            @item.Specialty
                        </p>
                        <a asp-action="Create" asp-controller="Reservation" asp-route-masterId="@item.Id"
                           class="btn btn-sm btn-pink">
                            Rezervasiya et
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Button pink style */
    .btn-pink {
        background-color: transparent !important;
        color: #e83e8c !important;
        border: 1px solid #e83e8c !important;
        transition: all 0.3s ease;
    }

        .btn-pink:hover {
            background-color: #e83e8c !important;
            color: white !important;
        }

    /* Master card base */
    .master-card {
        border-radius: 10px;
        overflow: hidden;
        /* Initial animation */
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.5s forwards;
        animation-delay: 0.2s;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

    /* Staggered animation delay for each card */
    .row.g-4 > .col-12.col-sm-6.col-lg-3:nth-child(1) .master-card {
        animation-delay: 0.1s;
    }

    .row.g-4 > .col-12.col-sm-6.col-lg-3:nth-child(2) .master-card {
        animation-delay: 0.2s;
    }

    .row.g-4 > .col-12.col-sm-6.col-lg-3:nth-child(3) .master-card {
        animation-delay: 0.3s;
    }

    .row.g-4 > .col-12.col-sm-6.col-lg-3:nth-child(4) .master-card {
        animation-delay: 0.4s;
    }
    /* Daha çox varsa davam etdirə bilərsən */

    /* Hover effects */
    .master-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
        z-index: 10;
    }

    .master-card img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        transition: transform 0.3s ease;
    }

    .master-card:hover img {
        transform: scale(1.03);
    }

    .master-card .card-body h5,
    .master-card .card-body p {
        color: #680427;
    }

    /* Mobile */
    @@media (max-width: 768px) {
        .master-card img

    {
        height: 180px;
    }

    .master-card .card-body {
        padding: 1rem;
    }

    }

    /* Keyframes */
    @@keyframes fadeInUp {
        to

    {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>
