@model NailSalon.Core.ViewModels.MenuSelectionVm

@{
    ViewData["Title"] = "Menyu Seçimi";
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] – Zodiac Nails</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* (Sənin əvvəlki CSS kodun burada olduğu kimi qalsın) */
    </style>
</head>
<body>

    <h2 class="menu-title">🧁 Menyu Seçimi</h2>

    <div class="menu-container">
        <form asp-action="Confirm" method="post">
            <div class="row g-4">

                @foreach (var item in new[] { "Cappuccino", "Latte", "Çay", "İsti Şokolad", "Şokoladlı Keks", "Vanilli Cupcake" })
                {
                    <div class="col-md-4">
                        <div class="card menu-card">
                            <img src="~/images/@(item.Replace(" ", "").Replace("ə", "e").ToLower()).jpg" class="card-img-top" alt="@item" />
                            <div class="card-body">
                                <h5>@item</h5>
                                <input type="checkbox" name="SelectedItems" value="@item" /> Seç
                            </div>
                        </div>
                    </div>
                }

            </div>

            <div class="text-center mt-5">
                <button type="submit" class="btn btn-primary px-5 py-2">Təsdiqlə</button>
            </div>
        </form>
    </div>

</body>
</html>
