@using NailSalon.Core.ViewModels
@model List<ServicesVm>

<section id="services" class="jarallax"
         style="background-image: url(images/background-1.jpg); background-size: cover; background-repeat: no-repeat; background-position: center;">
    <div class="container-lg padding-medium">
        <div class="section-title text-center mb-5">
            <h2 class="display-4 fw-normal" style="color:#680427;">Services we Offer</h2>
        </div>

        <div class="container">
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-12 col-sm-6 col-lg-4">
                        <div class="card service-card h-100 shadow-sm border-0">
                            <a href="@Url.Action("Detail", "Services", new { id = item.Id })" style="text-decoration:none;">
                                <div class="image-wrapper">
                                    <img src="~/images/@item.ImageUrl" class="card-img-top" alt="@item.Title" />
                                </div>
                            </a>
                            <div class="card-body d-flex flex-column">
                                <a href="@Url.Action("Detail", "Services", new { id = item.Id })" class="text-decoration-none w-100">
                                    <h5 class="card-title">@item.Title</h5>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<style>
    /* Kartların eyni hündürlükdə olması üçün flex */
    .service-card {
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
        /* Başlanğıc animasiya */
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.5s forwards;
    }

        /* Kart hover effekti */
        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(104, 4, 39, 0.4);
            z-index: 10;
        }

    /* Şəkil wrapper (şəkil kartın eni və hündürlüyünə tam uyğun olsun) */
    .image-wrapper {
        width: 100%;
        height: 220px; /* sabit hündürlük */
        overflow: hidden;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .service-card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    /* Hover zamanı şəkil böyüsün */
    .service-card:hover img {
        transform: scale(1.05);
    }

    /* Kartın bədənindəki yazı */
    .service-card .card-body {
        padding: 1rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
    }

    .service-card .card-title {
        color: #680427;
        font-weight: 600;
    }

    /* Mobil üçün */
    @@media (max-width: 768px) {
        .image-wrapper

    {
        height: 180px;
    }

    }

    @@media (max-width: 576px) {
        .image-wrapper

    {
        height: 140px;
    }

    }

    /* FadeInUp animasiyası */
    @@keyframes fadeInUp {
        to

    {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Sıralı animasiya üçün kartlara fərqli delay */
    .row.g-4 > .col-12.col-sm-6.col-lg-4:nth-child(1) .service-card {
        animation-delay: 0.1s;
    }

    .row.g-4 > .col-12.col-sm-6.col-lg-4:nth-child(2) .service-card {
        animation-delay: 0.2s;
    }

    .row.g-4 > .col-12.col-sm-6.col-lg-4:nth-child(3) .service-card {
        animation-delay: 0.3s;
    }

    .row.g-4 > .col-12.col-sm-6.col-lg-4:nth-child(4) .service-card {
        animation-delay: 0.4s;
    }
    /* Lazım olsa əlavə kartlar üçün davam etdirə bilərsən */
</style>
