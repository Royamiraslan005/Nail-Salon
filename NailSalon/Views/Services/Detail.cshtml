@using NailSalon.Core.ViewModels
@model ServicesVm

<div class="container py-5 service-detail-container">
    <div class="row align-items-center">
        <!-- Şəkil -->
        <div class="col-md-6 text-center mb-4 mb-md-0">
            <img src="@Url.Content("~/images/" + Model.ImageUrl)" alt="@Model.Title" class="img-fluid rounded cute-img" />
        </div>

        <!-- Məzmun -->
        <div class="col-md-6">
            <h2 class="cute-title">💅 @Model.Title</h2>
            <p class="cute-desc">@Model.Description</p>

            <div class="why-choose mt-4">
                <h5>🌟 Niyə bizi seçməlisiniz?</h5>
                <ul>
                    <li>💖 Sevgi ilə görülən işlər</li>
                    <li>🌈 Zərif və rəngarəng dizaynlar</li>
                    <li>🧼 Təmiz və rahat mühit</li>
                    <li>🎨 Peşəkar ustalardan fərqli effektlər</li>
                </ul>
            </div>

            <!-- Rating (ulduzlar) -->
            <div class="rating mt-3">
                ⭐⭐⭐⭐⭐
            </div>

            <!-- Sosial şəbəkə -->
            <div class="social-section mt-4">
                <a href="https://facebook.com/seninSeyfen" target="_blank" class="btn btn-primary">Facebook</a>
                <a href="https://instagram.com/amiraslanlii_r" target="_blank" class="btn btn-danger">Instagram</a>
                <a href="https://twitter.com/seninSeyfen" target="_blank" class="btn btn-info">Twitter</a>
            </div>

            <!-- Geri düyməsi -->
            <div class="mt-4">
                <a href="@Url.Action("Index", "Services")" class="btn btn-back">⬅ Xidmətlərə geri dön</a>
            </div>

            <!-- Əlaqə düyməsi -->
            <div class="text-center mt-4">
                <a href="/contact" class="btn btn-lg btn-contact">📩 Bizimlə Əlaqə</a>
            </div>
        </div>
    </div>

    
</div>

<!-- FontAwesome CDN for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #fff0f5;
        font-family: 'Quicksand', 'Segoe UI', sans-serif;
    }

    .service-detail-container {
        background: linear-gradient(to bottom right, #fff, #fff0f5);
        border: 2px dashed #f7c8e0;
        border-radius: 20px;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.08);
        padding: 40px;
    }

    .cute-title {
        color: #d63384;
        font-size: 3rem;
        font-weight: 700;
