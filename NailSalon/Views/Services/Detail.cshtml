@using NailSalon.Core.ViewModels
@model ServicesVm

<div class="container py-5 service-detail-container">
    <div class="row align-items-center">
        <!-- Şəkil -->
        <div class="col-md-6 text-center mb-4 mb-md-0">
            <img src="@Url.Content("~/images/" + Model.ImageUrl)" alt="@Model.Title" class="img-fluid rounded cute-img" />
        </div>

        <!-- Məzmun -->
        <div class="col-md-6">
            <h3  class="cute-title"> @Model.Title</h3>
            <p class="cute-desc">@Model.Description</p>

            <!-- Niyə bizi seçməlisiniz -->
            <div class="why-choose mt-4">
                <h5> Niyə bizi seçməlisiniz?</h5>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check-circle text-success me-2"></i>Sevgi ilə görülən işlər</li>
                    <li><i class="fas fa-check-circle text-success me-2"></i>Zərif və rəngarəng dizaynlar</li>
                    <li><i class="fas fa-check-circle text-success me-2"></i>Təmiz və rahat mühit</li>
                    <li><i class="fas fa-check-circle text-success me-2"></i>Peşəkar ustalardan fərqli effektlər</li>
                </ul>
            </div>


            <!-- Rating (ulduzlar) -->
            <div class="rating mt-3">
                <i class="fas fa-star text-warning"></i>
                <i class="fas fa-star text-warning"></i>
                <i class="fas fa-star text-warning"></i>
                <i class="fas fa-star text-warning"></i>
                <i class="fas fa-star text-warning"></i>
            </div>


            <!-- Sosial Şəbəkələr -->
            <div class="social-section mt-4">
                <div class="d-flex gap-3">
                    <a href="https://facebook.com/seninSeyfen" target="_blank" class="social-icon facebook">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="https://instagram.com/_zodiacc.nails/" target="_blank" class="social-icon instagram">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="https://twitter.com/seninSeyfen" target="_blank" class="social-icon twitter">
                        <i class="fab fa-twitter"></i>
                    </a>
                </div>
            </div>

            <!-- Geri düyməsi -->
            <div class="mt-4">
                <a href="@Url.Action("Index", "Services")" class="btn btn-back"> Xidmətlərə geri dön</a>
            </div>

         
        </div>
    </div>

    
</div>

