@model NailSalon.Core.ViewModels.NailTypeVm

<section class="py-5" style="background: #fff0f5;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0">
                <img src="~/images/@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow" style="max-height: 400px;" />
            </div>
            <div class="col-md-6">
                <h2 style="color: #d63384;">@Model.Title</h2>
                <p class="text-muted"><strong>Qiymət:</strong> @Model.Price.ToString("0.00") ₼</p>

                @if (!string.IsNullOrEmpty(Model.Zodiac))
                {
                    <p><strong>Bürc:</strong> @Model.Zodiac</p>
                }

                <a asp-action="Index" class="btn btn-outline-secondary mt-4">🔙 Geri Qayıt</a>
            </div>
        </div>
    </div>
</section>
